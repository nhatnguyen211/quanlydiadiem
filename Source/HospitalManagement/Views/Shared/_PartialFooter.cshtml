                                <ul>
                                    <li>
                                        <a href="#" target="_blank"><i class="fab fa-facebook-f"></i> </a>
                                    </li>
                                    <li>
                                        <a href="#" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                                    </li>
                                    <li>
                                        <a href="#" target="_blank"><i class="fab fa-instagram"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">

                    <div class="footer-widget footer-contact">
                        <h2 class="footer-title">Thông Tin Liên Hệ</h2>
                        <div class="footer-contact-info">
                            <div class="footer-address">
                                <span><i class="fas fa-map-marker-alt"></i></span>
                                <p> Số 35 Đường 3/2, P8, TP.Vũng Tàu </p>
                            </div>
                            <p>
                                <i class="fas fa-phone-alt"></i>
                                +84 85 511 9209
                            </p>
                            <p class="mb-0">
                                <i class="fas fa-envelope"></i>
                                <a href="#" class="__cf_email__" data-cfemail="91f5fef2f2e4e3f4d1f4e9f0fce1fdf4bff2fefc">[Liên hệ&#160;ngay!]</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">

                    <div class="footer-widget footer-menu">
                        <h2 class="footer-title">Địa Điểm</h2>
                        <ul>
                            <li><a href="/location">Tìm Kiếm</a></li>
                            <li><a href="/location">Lễ Hội - Sự Kiện</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">

                    <div class="footer-widget footer-menu">
                        <h2 class="footer-title">Khác</h2>
                        <ul>
                            <li><a href="#">Chính Sách</a></li>
                            <li><a href="#">Điều Khoản Dịch Vụ</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <div class="container-fluid">

            <div class="copyright">
                <div class="row">
                    <div class="col-md-6 col-lg-6">
                        <div class="copyright-text">
                            <p class="mb-0">&copy; @DateTime.Now.Year - Địa Điểm Bà Rịa Vũng Tàu.</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6">

                        <div class="copyright-menu">
                            <ul class="policy-menu">
                                <li><a href="#">@vietnameseDayOfWeekNames[(int)DateTime.Now.DayOfWeek]</a></li>
                                <li><a href="#">@DateTime.Now</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>